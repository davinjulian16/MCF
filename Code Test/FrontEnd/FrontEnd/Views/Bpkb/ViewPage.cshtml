@model IEnumerable<FrontEnd.Models.BpkbModel>
@{
    ViewData["Title"] = "View Page";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <a href="@Url.Action("AddPage", "Bpkb")" class="btn btn-success">Add New</a>
    </div>

    <!-- Scrollable table container -->
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto; margin-top: 20px;">
        <table class="table table-striped table-hover">
            <thead class="table-dark sticky-top">
                <tr>
                    <th>Agreement Number</th>
                    <th>Branch Id</th>
                    <th>No. BPKB</th>
                    <th>Tanggal BPKB In</th>
                    <th>Tanggal BPKB</th>
                    <th>No. Faktur</th>
                    <th>Tanggal Faktur</th>
                    <th>Nomor Polisi</th>
                    <th>Lokasi Penyimpanan</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bpkb in Model)
                {
                    <tr>
                        <td>@bpkb.AgreementNumber</td>
                        <td>@bpkb.BranchId</td>
                        <td>@bpkb.BpkbNo</td>
                        <td>@bpkb.BpkbDateIn</td>
                        <td>@bpkb.BpkbDate</td>
                        <td>@bpkb.FakturNo</td>
                        <td>@bpkb.FakturDate</td>
                        <td>@bpkb.PoliceNo</td>
                        <td>@bpkb.LocationId</td>
                        <td>
                            <a href="@Url.Action("EditPage", "Bpkb", new { id = bpkb.AgreementNumber })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeletePage", "Bpkb", new { id = bpkb.AgreementNumber })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
