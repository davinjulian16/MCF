@model IEnumerable<FrontEnd.Models.LocationModel>
@{
    ViewData["Title"] = "Add Page";
}

<div class="container mt-5">
    <form method="post" action="/Bpkb/Save">
        <div class="row">
            <!-- Column 1 -->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="AgreementNumber">Agreement Number</label>
                    <input type="text" id="AgreementNumber" name="AgreementNumber" class="form-control" placeholder="Agreement Number" required />
                </div>

                <div class="form-group">
                    <label for="BranchId">Branch Id</label>
                    <input type="text" id="BranchId" name="BranchId" class="form-control" placeholder="Branch Id" required />
                </div>

                <div class="form-group">
                    <label for="BpkbNo">No. BPKB</label>
                    <input type="text" id="BpkbNo" name="BpkbNo" class="form-control" placeholder="No. BPKB" required />
                </div>

                <div class="form-group">
                    <label for="BpkbDateIn">Tanggal BPKB In</label>
                    <input type="date" id="BpkbDateIn" name="BpkbDateIn" class="form-control" placeholder="Tanggal BPKB In" required />
                </div>

                <div class="form-group">
                    <label for="BpkbDate">Tanggal BPKB</label>
                    <input type="date" id="BpkbDate" name="BpkbDate" class="form-control" placeholder="Tanggal BPKB" required />
                </div>

                <div class="form-group">
                    <label for="FakturNo">No. Faktur</label>
                    <input type="text" id="FakturNo" name="FakturNo" class="form-control" placeholder="No. Faktur" required />
                </div>

            </div>

            <!-- Column 2 -->
            <div class="col-md-6">
              
                <div class="form-group">
                    <label for="FakturDate">Tanggal Faktur</label>
                    <input type="date" id="FakturDate" name="FakturDate" class="form-control" placeholder="Tanggal Faktur" required />
                </div>

                <div class="form-group">
                    <label for="PoliceNo">Nomor Polisi</label>
                    <input type="text" id="PoliceNo" name="PoliceNo" class="form-control" placeholder="Nomor Polisi" required />
                </div>

                <div class="form-group">
                    <label for="LocationId">Lokasi Penyimpanan</label>
                    <select id="LocationId" name="LocationId" class="form-control" required>
                        @foreach (var location in Model)
                        {
                            <option value="@location.LocationId">@location.LocationName</option> <!-- Assuming 'Id' and 'Name' are your properties -->
                        }
                    </select>
                </div>
            </div>
        </div>

        <!-- Buttons at the bottom -->
        <div class="form-group text-center mt-4">
            <a href="/Bpkb/ViewPage" class="btn btn-secondary ml-3">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
